<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_modal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:id="@+id/dragHandle"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_marginVertical="10dp"
        android:background="#9ca3af" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Thêm giao dịch mới"
        android:textColor="#FF6B00"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:chipSpacingHorizontal="20dp"
            app:chipSpacingVertical="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrencyLabel"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipIncome"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu nhập"
                android:textColor="#22c55e"
                android:textSize="18sp"
                app:chipBackgroundColor="#dcfce7"
                app:chipCornerRadius="10dp"
                app:chipEndPadding="10dp"
                app:chipIcon="@drawable/arrow_up"
                app:chipIconEnabled="true"
                app:chipIconTint="#22c55e"
                app:chipMinHeight="50dp"
                app:chipMinTouchTargetSize="50dp"
                app:chipStartPadding="10dp"
                app:chipStrokeColor="#22c55e"
                app:chipStrokeWidth="1dp"
                app:textEndPadding="10dp"
                app:textStartPadding="10dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipExpense"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Chi tiêu"
                android:textColor="#ef4444"
                android:textSize="18sp"
                app:chipBackgroundColor="#fee2e2"
                app:chipCornerRadius="10dp"
                app:chipEndPadding="10dp"
                app:chipIcon="@drawable/arrow_down"
                app:chipIconEnabled="true"
                app:chipIconTint="#ef4444"
                app:chipMinHeight="50dp"
                app:chipMinTouchTargetSize="50dp"
                app:chipStartPadding="10dp"
                app:chipStrokeColor="#ef4444"
                app:chipStrokeWidth="1dp"
                app:textEndPadding="10dp"
                app:textStartPadding="10dp" />

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_form_fields"
            android:clickable="true"
            android:drawableStart="@drawable/layout_grid"

            android:drawableEnd="@drawable/chevron_down"
            android:drawablePadding="10dp"
            android:drawableTint="#0033CC"

            android:focusable="true"
            android:gravity="center_vertical"

            android:hint="Loại giao dịch"
            android:padding="10dp"
            android:textColor="#1f2937"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_form_fields"
            android:backgroundTint="@null"

            android:drawableStart="@drawable/dollar_sign"
            android:drawablePadding="10dp"

            android:drawableTint="#0033CC"
            android:ellipsize="end"
            android:hint="Số tiền"
            android:inputType="textCapSentences"

            android:maxLines="1"
            android:padding="10dp"
            android:textColor="#1f2937"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_form_fields"
            android:clickable="true"

            android:drawableStart="@drawable/calendar_days"
            android:drawablePadding="10dp"
            android:drawableTint="#0033CC"

            android:focusable="true"
            android:gravity="center_vertical"

            android:hint="Ngày giao dịch"
            android:padding="10dp"
            android:textColor="#1f2937"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="@drawable/bg_form_fields"
            android:backgroundTint="@null"
            android:drawableStart="@drawable/pencil_line"

            android:drawablePadding="10dp"
            android:drawableTint="#0033CC"

            android:ellipsize="end"
            android:hint="Ghi chú (tùy chọn)"
            android:inputType="textCapSentences"
            android:maxLines="1"

            android:padding="10dp"
            android:textColor="#1f2937"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelTransaction"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_cancel_button"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="#0033CC"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSaveTransaction"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_save_button"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>