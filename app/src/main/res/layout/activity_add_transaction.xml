<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_modal"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!-- Thanh kéo BottomSheet -->
    <View
        android:id="@+id/dragHandle"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_marginVertical="10dp"
        android:background="#9ca3af" />
    <!-- Tiêu đề màn hình -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Thêm giao dịch mới"
        android:textColor="#FF6B00"
        android:textSize="32sp"
        android:textStyle="bold" />
    <!-- Form nhập liệu -->
    <LinearLayout
        android:id="@+id/layoutForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <!-- Chip chọn loại giao dịch (Chi tiêu/Thu nhập) -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            app:selectionRequired="true"
            app:singleSelection="true">
            <!-- Chip Chi tiêu -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipExpense"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Chi tiêu"
                android:textColor="@color/chip_expense_text"
                android:textSize="18sp"
                app:checkedIcon="@drawable/check"
                app:checkedIconTint="#FFFFFF"
                app:chipBackgroundColor="@color/chip_expense_bg"
                app:chipCornerRadius="10dp"
                app:chipMinHeight="50dp"
                app:chipStrokeColor="#dc2626"
                app:closeIcon="@drawable/arrow_down"
                app:closeIconTint="@color/chip_expense_text"
                app:closeIconVisible="true" />
            <!-- Chip Thu nhập -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipIncome"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Thu nhập"
                android:textColor="@color/chip_income_text"
                android:textSize="16sp"
                app:checkedIcon="@drawable/check"
                app:checkedIconTint="#FFFFFF"
                app:chipBackgroundColor="@color/chip_income_bg"
                app:chipCornerRadius="10dp"
                app:chipMinHeight="50dp"
                app:chipStrokeColor="#16a34a"
                app:closeIcon="@drawable/arrow_up"
                app:closeIconTint="@color/chip_income_text"
                app:closeIconVisible="true" />
        </com.google.android.material.chip.ChipGroup>
        <!-- Dropdown chọn danh mục -->
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_white_with_border"
            android:clickable="true"
            android:drawableStart="@drawable/layout_grid"
            android:drawableEnd="@drawable/chevron_down"
            android:drawablePadding="10dp"
            android:drawableTint="#0033CC"
            android:focusable="true"
            android:gravity="center_vertical"
            android:hint="Loại giao dịch"
            android:padding="10dp"
            android:textColor="#1f2937"
            android:textSize="18sp" />
        <!-- Ô nhập số tiền -->
        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_white_with_border"
            android:backgroundTint="@null"
            android:drawableStart="@drawable/dollar_sign"
            android:drawablePadding="10dp"
            android:drawableTint="#0033CC"
            android:ellipsize="end"
            android:hint="Số tiền"
            android:inputType="number"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="#1f2937"
            android:textSize="18sp" />
        <!-- Chọn ngày giao dịch -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_white_with_border"
            android:clickable="true"
            android:drawableStart="@drawable/calendar_days"
            android:drawablePadding="10dp"
            android:drawableTint="#0033CC"
            android:focusable="true"
            android:gravity="center_vertical"
            android:hint="Ngày giao dịch"
            android:padding="10dp"
            android:textColor="#1f2937"
            android:textSize="18sp" />
        <!-- Ô nhập ghi chú -->
        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_white_with_border"
            android:backgroundTint="@null"
            android:drawableStart="@drawable/pencil_line"
            android:drawablePadding="10dp"
            android:drawableTint="#0033CC"
            android:ellipsize="end"
            android:hint="Ghi chú (tùy chọn)"
            android:inputType="textCapSentences"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="#1f2937"
            android:textSize="18sp" />
    </LinearLayout>
    <!-- Nút hành động (Hủy/Lưu) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <!-- Nút Hủy -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelTransaction"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_gray_no_border"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="#0033CC"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!-- Nút Lưu -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSaveTransaction"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_gradient_blue"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
