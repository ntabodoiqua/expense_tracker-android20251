<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="#40FFFFFF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/search"
                        app:tint="#FFFFFF" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tìm kiếm"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_white_with_border"
                app:iconifiedByDefault="false"
                app:queryHint="Tìm theo tên hoặc ghi chú..." />

            <!-- Search Bar -->
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:fillViewport="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="80dp">

                <!-- Bộ lọc Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingVertical="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/funnel"
                            app:tint="#0033CC" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bộ lọc"
                            android:textColor="#0033CC"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/bg_white_with_border"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Header với icon -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Loại giao dịch"
                            android:textColor="#525252"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            app:selectionRequired="true"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipAll"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="Tất cả"
                                android:textColor="@color/chip_all_text"
                                android:textSize="16sp"
                                app:checkedIcon="@drawable/check"
                                app:checkedIconTint="#FFFFFF"
                                app:chipBackgroundColor="@color/chip_all_bg"
                                app:chipCornerRadius="10dp"
                                app:chipMinHeight="40dp"
                                app:chipStrokeColor="#2563eb" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipExpense"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chi tiêu"
                                android:textColor="@color/chip_expense_text"
                                android:textSize="16sp"
                                app:checkedIcon="@drawable/check"
                                app:checkedIconTint="#FFFFFF"
                                app:chipBackgroundColor="@color/chip_expense_bg"
                                app:chipCornerRadius="10dp"
                                app:chipMinHeight="40dp"
                                app:chipStrokeColor="#dc2626" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipIncome"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thu nhập"
                                android:textColor="@color/chip_income_text"
                                android:textSize="16sp"
                                app:checkedIcon="@drawable/check"
                                app:checkedIconTint="#FFFFFF"
                                app:chipBackgroundColor="@color/chip_income_bg"
                                app:chipCornerRadius="10dp"
                                app:chipMinHeight="40dp"
                                app:chipStrokeColor="#16a34a" />
                        </com.google.android.material.chip.ChipGroup>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Khoảng thời gian"
                            android:textColor="#525252"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvFromDate"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"

                                android:background="@drawable/bg_white_with_border"
                                android:clickable="true"
                                android:drawablePadding="10dp"
                                android:focusable="true"

                                android:gravity="center"
                                android:paddingHorizontal="10dp"
                                android:text="Từ ngày"

                                android:textColor="#1f2937"
                                android:textSize="16sp"
                                app:drawableStartCompat="@drawable/calendar_days"
                                app:drawableTint="#0033CC" />

                            <TextView
                                android:id="@+id/tvToDate"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"

                                android:background="@drawable/bg_white_with_border"
                                android:clickable="true"
                                android:drawablePadding="10dp"
                                android:focusable="true"

                                android:gravity="center"
                                android:paddingHorizontal="10dp"
                                android:text="Đến ngày"

                                android:textColor="#1f2937"
                                android:textSize="16sp"
                                app:drawableStartCompat="@drawable/calendar_days"
                                app:drawableTint="#0033CC" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Danh mục"
                            android:textColor="#525252"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvCategoryFilter"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"

                            android:layout_marginBottom="20dp"
                            android:background="@drawable/bg_white_with_border"
                            android:clickable="true"
                            android:drawableStart="@drawable/layout_grid"

                            android:drawableEnd="@drawable/chevron_down"
                            android:drawablePadding="10dp"
                            android:drawableTint="#0033CC"

                            android:focusable="true"
                            android:gravity="center_vertical"

                            android:hint="Loại giao dịch"
                            android:padding="10dp"
                            android:textColor="#1f2937"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Khoảng giá"
                            android:textColor="#525252"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/etMinAmount"
                                android:layout_width="0dp"
                                android:layout_height="50dp"

                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"

                                android:background="@drawable/bg_white_with_border"
                                android:backgroundTint="@null"

                                android:drawableStart="@drawable/dollar_sign"
                                android:drawablePadding="10dp"
                                android:drawableTint="#0033CC"
                                android:ellipsize="end"

                                android:hint="Tối thiểu"
                                android:inputType="number|numberDecimal"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColor="#1f2937"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/etMaxAmount"
                                android:layout_width="0dp"
                                android:layout_height="50dp"

                                android:layout_marginStart="10dp"
                                android:layout_weight="1"

                                android:background="@drawable/bg_white_with_border"
                                android:backgroundTint="@null"

                                android:drawableStart="@drawable/dollar_sign"
                                android:drawablePadding="10dp"
                                android:drawableTint="#0033CC"
                                android:ellipsize="end"

                                android:hint="Tối đa"
                                android:inputType="number|numberDecimal"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColor="#1f2937"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnResetFilter"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_gray_no_border"
                                android:text="Xoá bộ lọc"
                                android:textAllCaps="false"
                                android:textColor="#FF6B00"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnApplyFilter"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_gradient_orange"
                                android:text="Áp dụng"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <!-- Kết quả tìm kiếm -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingVertical="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/layout_list"
                            app:tint="#0033CC" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kết quả tìm kiếm"
                            android:textColor="#0033CC"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:clipToPadding="false" />

                    <LinearLayout
                        android:id="@+id/layoutEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="20dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/list_x"
                            app:tint="#9ca3af" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Không tìm thấy giao dịch"
                            android:textColor="#9ca3af"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Thử điều chỉnh bộ lọc hoặc tìm kiếm khác"
                            android:textColor="#9ca3af"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Empty state -->
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>